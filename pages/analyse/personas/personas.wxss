/* pages/analyse/personas/personas.wxss */
@import "../../../common/common.wxss";
page{
  background-color: rgb(236, 236, 236);
}

/* 今日新老商户 */
.counter{  
  background-color: white;
  text-align: center;
  margin-top: 170rpx;
  padding: 20rpx;
}
.trans_all{
  display: flex;
  margin-top: 20rpx;
  padding: 20rpx;
}
.user_all{
  width: 33%;
  border-right: 1rpx solid #E6E6E6;
}
.user_title{
  font-size: 24rpx;
  margin-top: 30rpx;
  height: 60rpx;
  color: #939393;
}
.user_no{
  font-size: 28rpx;
  height: 40rpx;
}
.table{
  border: 4rpx solid #E9E9E9;
  border-right: 0;
  border-bottom: 0;
  margin: 40rpx;
}
.tr{
  align-items: center;
  height: 100rpx;
  position: relative; 
  text-align: center;
  line-height: 96rpx;
  width: 100%;
  display: flex;
  justify-content: space-between; 
}
.td{
  border-bottom: 4rpx solid #E9E9E9;
  border-right: 4rpx solid #E9E9E9;
}
.td_title{
  width: 45%;
  font-size: 22rpx;
  color: #9F9F9F;
  background-color: #F7F7F7;
}
.last_td{
  width: 55%;
  font-size: 30rpx;
}

/* 用户消费能力 */
.consume{ 
  background-color: white;
  text-align: center;
  margin-top: 20rpx;
  padding: 20rpx; 
}
.title-text{
  font-size: 36rpx;
  color: #212121;
}
canvas{
  margin-top: 40rpx;
  width: 100%;
  height: 300px;
  text-align: left;
  background-color: white;
}
/* 用户地域分布 */
.bouns-bd{
  width: 100%;   
  background-color: white; 
  text-align: center;
  margin-top: 20rpx;
}
.area-table {
  margin-top: 20rpx;
  border:1px solid white;
  border-right: 0;
  border-bottom: 0;
}
.area-tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.area-th,.area-td {
  padding: 10px;
  border-bottom: 1px solid rgb(233, 233, 233);
  border-right: 1px solid rgb(233, 233, 233);
  text-align: center;
  width:100%;
  font-size: 24rpx;
}
.area-th {
  font-weight: 400;
  color: white;
  background-color: rgb(41, 126, 252);
}